<Page
    x:Class="SelectedTextSpeach.Views.ChoiceArtifactsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SelectedTextSpeach.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel  Width="700" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Button x:Name="NavigateButton" Content="Back" Click="NavigateMainPage"/>
            <TextBlock Text="Input Blob Storage ConnectionString"
                Style="{StaticResource CaptionTextBlockStyle}" />
            <TextBox Margin="5"
                Text="{x:Bind ViewModel.StorageConnectionInput.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Margin="5"
                Text="{x:Bind ViewModel.StorageContainerInput.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button x:Name="getBlobButton" Margin="10" Content="Get Blob Items"
                        Click="{x:Bind ViewModel.OpenBlob}" />
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="ProjectComboBox"
                      Width="200" Margin="5"
                      ItemsSource="{x:Bind ViewModel.Projects}" SelectedItem="{x:Bind ViewModel.SelectedProject.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Header="Projects" PlaceholderText="Pick a Project"
                      SelectionChanged="{x:Bind ViewModel.ProjectComboBox_SelectionChanged}"/>
                <ComboBox x:Name="BranchComboBox"
                      Width="200" Margin="5"
                      ItemsSource="{x:Bind ViewModel.Branches}" SelectedItem="{x:Bind ViewModel.SelectedBranch.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Header="Projects" PlaceholderText="Pick a Branch"
                      SelectionChanged="{x:Bind ViewModel.BranchComboBox_SelectionChanged}"/>
                <ComboBox x:Name="ArtifactComboBox"
                      Width="200" Margin="5"
                      ItemsSource="{x:Bind ViewModel.Artifacts}" SelectedItem="{x:Bind ViewModel.SelectedArtifact.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Artifact"
                      Header="Projects" PlaceholderText="Pick a Artifact"
                      SelectionChanged="{x:Bind ViewModel.ArtifactComboBox_SelectionChanged}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
